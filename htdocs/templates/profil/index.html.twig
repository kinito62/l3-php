{% extends 'base.html.twig' %}

{% block title %}Hello ProfilController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <p>Bienvenue sur la page de votre profile</p>
    <p>Voici vos différents pronostic : </p>

    {% for pronos in prono %}


        <p>-------------------------------------</p>
        {% if 'now'|date('Y-m-d H-m-s', "Europe/Paris") < match[pronos.getIdMatch()].date|date('Y-m-d H-m-s', "Europe/Paris") %}
            <li><p>Pari n°{{pronos.getId()}} </p></li>
            <li><p>Score domicile ({{match[pronos.getIdMatch()].teams.domicile}}) : {{ pronos.ScoreD }}</p>
            <li><p>Score Extérieur ({{match[pronos.getIdMatch()].teams.exterieur}}): {{ pronos.ScoreE }}</p>
        {% else%}
            <li><p>Pari n°{{pronos.getId()}} </p></li>
            <li><p>Score domicile ({{match[pronos.getIdMatch()].teams.domicile}}) : {{ pronos.ScoreD }}</p>
            <li><p>Score Extérieur ({{match[pronos.getIdMatch()].teams.exterieur}}): {{ pronos.ScoreE }}</p>
        {% endif %}


    {% endfor %}
<br>
<br>
<h3 style="text-align: center">Le nombre total de vos points est de : {{ nbpoints }}</h3>
<h3 style="text-align: center">Vous êtes au rang : {{ classement }}</h3>

</div>
{% endblock %}
